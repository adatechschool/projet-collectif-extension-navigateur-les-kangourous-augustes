{
"manifest_version": 3,
"name": "Cliquette Translate",
"description": "Extension de traduction en fran√ßais par un kangourou auguste",
"version": "1.0",
"permissions": [
    "activeTab",
    "storage"
],

"action": {
    "default_icon": "kangaroo.png",
    "default_popup": "popup.html"
},

"content_scripts": [
    {
        "matches": ["<all_urls>"],
        "js": ["content-script.js"]
    }
],

"background": {
    "service_worker": "background.js",
    "type": "module"
},

"options_ui": {
    "page": "options.html",
    "open_in_tab": false
},

"icons": {
"128": "kangaroo.png"
}
}
